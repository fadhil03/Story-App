<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/dark_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.StoryApp.Headline" parent="TextAppearance.AppCompat.Headline" tools:keep="@style/TextAppearance_StoryApp_Headline">
        <item name="fontFamily">@font/opensans_bold</item>
    </style>

    <style name="TextAppearance.StoryApp.Title" parent="TextAppearance.AppCompat.Title" tools:keep="@style/TextAppearance_StoryApp_Title">
        <item name="fontFamily">@font/opensans_semibold</item>
    </style>

    <style name="TextAppearance.StoryApp.Body1" parent="TextAppearance.AppCompat.Body1" tools:keep="@style/TextAppearance_StoryApp_Body1">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.StoryApp.Body2" parent="TextAppearance.AppCompat.Body2" tools:keep="@style/TextAppearance_StoryApp_Body2">
        <item name="fontFamily">@font/opensans_regular</item>
    </style>

    <style name="TextAppearance.StoryApp.TitleSmaller" parent="TextAppearance.AppCompat.Title" tools:keep="@style/TextAppearance_StoryApp_TitleSmaller">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.StoryApp.Button" parent="Widget.AppCompat.Button" tools:keep="@style/TextAppearance_StoryApp_Button">
        <item name="fontFamily">@font/opensans_semibold</item>
        <item name="android:textAllCaps">false</item>
        <item name="color">?attr/colorOnPrimary</item>
    </style>

</resources>